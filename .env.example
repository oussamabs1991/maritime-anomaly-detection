# Maritime Anomaly Detection Environment Variables
# Copy this file to .env and update with your actual values

# Data paths
ZIP_FILE_PATH=/path/to/your/AIS_2024_10_24.zip
CSV_FILE_NAME=AIS_2024_10_24.csv

# Model configuration
TEST_MODE=false
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=logs/maritime_detection.log

# Output directories
DATA_DIR=data
MODELS_DIR=data/models
PLOT_DIR=plots

# Performance settings
RANDOM_STATE=42
N_JOBS=-1

# GPU settings (uncomment to force CPU)
# CUDA_VISIBLE_DEVICES=""

# Memory settings for large datasets
CHUNK_SIZE=500000
MAX_MEMORY_GB=8

# External API keys (if needed for additional data sources)
# MARINECADASTRE_API_KEY=your_api_key_here
# WEATHER_API_KEY=your_weather_api_key_here

# Database settings (if using database storage)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=maritime_db
# DB_USER=maritime_user
# DB_PASSWORD=your_password_here

# Email notifications (if implementing)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password
# NOTIFICATION_EMAIL=admin@yourcompany.com